/* miniprogram/pages/chart/chart.wxss */
.search{
    display: flex;
    padding: 20rpx;
    color: #4b4b4b;
    background-color: #40A2F9;
    box-sizing: border-box;
    font-size: 28rpx;
}

.date{
    flex: 1;
    height: 60rpx;
    background-color: #fff;
    border-radius: 30rpx;
}

.picker{
    padding: 0 30rpx;
    line-height: 60rpx;
}

.selectSearch{
    width: 120rpx;
    height: 60rpx;
    margin-left: 20rpx;
    background-color: #fff;
    border-radius: 20rpx;
    text-align: center;
    line-height: 60rpx;
}

.text{
    display: flex;
    padding: 20rpx;
    background-color: #fff;
    font-size: 28rpx;
    font-weight: bold;
    text-align: center;
    justify-content: space-around;
}

.line{
    padding: 10rpx 20rpx;
    border-radius: 10rpx;
    border: 2rpx solid transparent;
}

.line.shouru{
    border-color: #03B16C;
}

.line.zhichu{
    border-color: #e4393c;
}

.money.shouru{
    color: #03B16C;
}

.money.zhichu{
    color: #e4393c;
}

.chart-content{
    height: 600rpx;
    margin: 20rpx 0;
    padding: 10rpx;
    background-color: #fff;
}

.canvas{
    height: 100%;
}

.list-item{
    display: flex;
    padding: 20rpx;
    background-color: #fff;
    border-bottom: 2rpx solid #e8e8e8;
    justify-content: space-between;
    align-items: center;
}

.icon-box{
    width: 80rpx;
    height: 80rpx;
}

.icon{
    height: 80rpx;
}

.item-content{
    display: flex;
    flex: 1;
    height: 80rpx;
    margin: 0 20rpx;
    color: #4b4b4b;
    font-size: 28rpx;
    flex-direction: column;
    justify-content: space-between;
}

.item-text{
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.item-money{
    font-weight: bold;
}

.item-money.shouru{
    color: #03B16C;
}

.item-money.zhichu{
    color: #e4393c;
}

.progress-box{
    flex: 1;
    height: 20rpx;
    margin-right: 80rpx;
    background-color: #e8e8e8;
    border-radius: 20rpx;
    overflow: hidden;
}

.progress{
    width: 60rpx;
    height: 100%;
    background-color: #03B16C;
}

.arrow{
    width: 50rpx;
    height: 50rpx;
}

.right-arrow{
    height: 50rpx;
}
